@model IEnumerable<Where2Study.Models.drzava_tekst>

@{
    ViewBag.Title = "Countries";
}
<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <h3>@Resources.Resources.BrowseCountries</h3>
        </div>
    </div>
</div>


@if (@Model.Count() != 0)
{
    <p>
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    @Resources.Resources.SelectFromb @Model.Count() @Resources.Resources.countries:
                </div>
            </div>
        </div>
    </p>}

<div class="container">
    <div class="row">
        <ul">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 center-block">
                    <input type="button"class="btn btn-primary btn-lg" style="margin:0.27em;width:100%;" value=@item.naziv title=item.naziv onclick="location.href='@Url.Action("Cities", "Menu", new { country = item.naziv })    '" />

                   @* <li><button type="button" class="btn btn-primary btn-lg" style="margin:0.27em;width:100%;">@Html.ActionLink(item.naziv, "Cities", new { country = item.naziv })</button></li>*@
                </div>
            }

        </ul>
    </div>
 <br />
</div>



@model Where2Study.Models.LocalPasswordModel

<h3>@Resources.Resources.ChangePassword</h3>

@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>@Resources.Resources.ChangePasswordForm</legend>
                <div class="row">
                    <div class="col-xs-2 col-lg-2 col-md-2 col-sm-2">
                        @Html.LabelFor(m => m.OldPassword)
                    </div>
                    <div class="col-xs-5 col-lg-5 col-md-5 col-sm-5">
                        @Html.PasswordFor(m => m.OldPassword)
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-2 col-lg-2 col-md-2 col-sm-2">
                @Html.LabelFor(m => m.NewPassword)
                        </div>
                        <div class="col-xs-5 col-lg-5 col-md-5 col-sm-5">
                @Html.PasswordFor(m => m.NewPassword)
                            </div>
                    </div>
                 <div class="row">
                    <div class="col-xs-2 col-lg-2 col-md-2 col-sm-2">
                @Html.LabelFor(m => m.ConfirmPassword)
                        </div>
                     <div class="col-xs-5 col-lg-5 col-md-5 col-sm-5">
                @Html.PasswordFor(m => m.ConfirmPassword)
                     </div>
                </div>
        <input type="submit" value="@Resources.Resources.ChangePassword" />
    </fieldset>
}

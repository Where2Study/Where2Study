@model Where2Study.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@Resources.Resources.Register</h1>
    <h2>@Resources.Resources.AssociateYour @ViewBag.ProviderDisplayName @Resources.Resources.Account</h2>
</hgroup>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Resources.Resources.AssociationForm</legend>
        <p>
            @Resources.Resources.YouveSuccessfullyAuthenticatedWith <strong>@ViewBag.ProviderDisplayName</strong>.
            @Resources.Resources.PleaseEnterUserName

        </p>
        <ol>
            <li class="name">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" value=@Resources.Resources.Confirm />
    </fieldset>
}

